<!--pages/login/login.wxml-->

<view class="login-title">
<image src="https://app.wayouquan.com/newexcavator/assets/images/home.png" style="width:40rpx;margin-left:20rpx" mode='widthFix' catchtap='toHome'></image>
  <text style="color:#fff;font-size:33rpx;margin:20rpx;display:inline-block;width:150rpx;text-align:center;margin-left:240rpx">登陆</text>
</view>

    <image src="https://app.wayouquan.com/newexcavator/assets/images/wyqLogo.png" style="width:230rpx;margin-top: 100rpx;margin-left: 260rpx;margin-bottom: 60rpx;" mode='widthFix'></image>

    <view>
      <input class="login-input" name="phone" placeholder="请输入手机号"></input>
      <input class="login-input" type="password" name="password" placeholder="请输入密码"></input>
    </view>
<view>
  <text class="text-three" style="margin-left:350rpx" catchtap='register'>注册账号</text><text class="text-three" catchtap='forgetPass'>忘记密码</text>
</view>
<view style="margin-top:40rpx">
  <button catchtap='login' class="nbutton">登陆</button>
</view>