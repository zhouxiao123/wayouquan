/* pages/register/register.wxss */
page{
  background:#f3f3f3
}
.register-title{
  height:60rpx;
  background:#1da1ff;
  display:flex;
  justify-content: flex-start;
  align-items: center
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom:20rpx
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #999;
}
.input-content{
        display: block;
    width: 450rpx;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    margin: 40rpx auto;
    border: 1px solid #bfbfbf;
    border-radius: 10rpx;
    font-size:32rpx
}
.add-view{
  display:flex;
  padding-left:50rpx;
  font-family: "微软雅黑";
  font-size:32rpx;
  color: #545253;
  padding-top:20rpx;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
  height:50rpx;
  background:#fff
}
.add-text{
  width:180rpx;
 margin-right:20rpx
}
.nbutton{
  width: 680rpx;
    height: 80rpx;
    background: #1ca1fe;
    color: #fff;
    border-radius: 10rpx;
    font-size:32rpx;
    line-height:80rpx;
    margin-bottom:40rpx
}